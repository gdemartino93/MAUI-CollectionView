<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_CollectionView.MVVM.Views.ProductsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ProductsView">
    <CollectionView
        IsGrouped="true"
        ItemsSource="{Binding Products}"
        Scrolled="CollectionView_Scrolled">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label BackgroundColor="Pink" Text="{Binding Name}" />
                <!--  questo Ã¨ il nome del gruppo non del prodotto  -->
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.GroupFooterTemplate>
            <DataTemplate>
                <Label Text="{Binding Count, StringFormat='Numero prodotti in questa sezione: {0:D}'}" TextColor="Red" />
            </DataTemplate>
        </CollectionView.GroupFooterTemplate>
        <CollectionView.ItemsLayout>
            <LinearItemsLayout ItemSpacing="20" Orientation="Vertical" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame>
                    <VerticalStackLayout>
                        <Image Source="{Binding Image}" />
                        <Label Text="{Binding Name}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>